{
  "name": "npm-angular-seed",
  "version": "1.0.0",
  "description": "Front-End automation for AngularJS projects with npm scripts",
  "scripts": {
    "prestart": "npm run clean:dist && cpx \"src/app/index.html\" src/dist --command \"htmlminify\" && npm run resource",
    "start": "npm-run-all --parallel \"server\" \"watch:*\"",
      "watch:html": "npm run build:html -- --watch",
      "watch:module": "npm run build:module -- --watch",
      "watch:js": "npm run build:js -- --watch",
      "watch:css": "onchange `find src/app -type f -name \"*.scss\"` -i -- npm run build:css",
    "prebuild": "npm run clean:dist && npm run resource",
    "build": "npm-run-all --parallel \"build:*\"",
      "build:html": "cpx \"src/app/**/*.html\" src/dist --command \"htmlminify\"",
      "build:module": "babel src/app -o src/dist/bundle.module.js --only=\"*.module.js\" --compact=true",
      "build:js": "babel src/app -o src/dist/bundle.js --ignore=\"*.module.js\" --compact=true",
      "build:css": "cat `find src/app -type f -name \"*.scss\"` | node-sass --output-style=compressed > src/dist/bundle.css | postcss -u autoprefixer -r src/dist/bundle.css",
    "resource": "npm-run-all --parallel \"resource:*\"",
      "resource:es6-shim": "cpx \"node_modules/es6-shim/es6-shim.min.js\" src/dist/libs",
      "resource:shims-for-ie": "uglifyjs -c -o \"src/dist/libs/shims_for_IE.min.js\" \"node_modules/angular2/es6/dev/src/testing/shims_for_IE.js\"",
      "resource:polyfills": "cpx \"node_modules/angular2/bundles/angular2-polyfills.min.js\" src/dist/libs",
      "resource:rxjs": "cpx \"node_modules/rxjs/bundles/Rx.umd.min.js\" src/dist/libs",
      "resource:angular2": "cpx \"node_modules/angular2/bundles/angular2-all.umd.min.js\" src/dist/libs",
    "clean": "npm-run-all --parallel \"clean:*\"",
      "clean:dist": "rimraf src/dist && mkdirp src/dist && mkdirp src/dist/libs",
    "server": "live-server src/dist --host=localhost --port=3000"
  },
  "author": "Tuomas Ã…felt",
  "license": "ISC",
  "dependencies": {
    "angular2": "^2.0.0-beta.14",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "^0.1.2",
    "rxjs": "^5.0.0-beta.2",
    "zone.js": "^0.6.10"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "cpx": "^1.3.1",
    "html-minify": "^0.3.1",
    "live-server": "^0.9.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.7.0",
    "postcss-cli": "^2.5.1",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2"
  }
}
